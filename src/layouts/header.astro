---
import NavLink from "./header/nav-link.astro";
import Title from "./header/title.astro";
import ThemeChanger from "./header/theme-changer.astro";

---

<header class="sticky top-4 flex w-full justify-center pb-6">
  <div
    class="z-50 flex h-20 w-full items-center justify-between rounded-full border border-border bg-card/60 px-6 backdrop-blur"
  >
    <div>
      <h1 class="group flex select-none text-2xl font-bold text-card-foreground transition-all">
        <Title />
      </h1>
    </div>
    <div class="flex h-full flex-row items-center gap-4">
      <nav class="grid grid-cols-3 gap-4">
        <NavLink href="/">HOME</NavLink>
        <NavLink href="/projects">PROJECTS</NavLink>
        <NavLink href="/blog">BLOG</NavLink>
      </nav>

      <ThemeChanger />
    </div>
  </div>
</header>
