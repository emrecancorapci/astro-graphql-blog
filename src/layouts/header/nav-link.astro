---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<"a"> {
  href: string;
}

const { href, ...props } = Astro.props;
---

<a
  class={`text-center text-base font-bold transition-all ${Astro.url.pathname === href ? "text-primary" : "text-card-foreground hover:text-primary"}`}
  href={href}
  {...props}
>
  <slot />
</a>
