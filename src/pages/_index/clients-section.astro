---
interface Props {
  title: string;
  subTitle: string;
}

const { title, subTitle } = Astro.props;
---

<div class="grid w-full grid-cols-1 justify-center gap-8 py-24">
  <div class="grid w-full grid-cols-1 justify-center">
    <h2 class="text-center text-3xl font-bold text-card-foreground">
      {title}
    </h2>
    <p class="text-center text-muted-foreground">
      {subTitle}
    </p>
  </div>
  <div class="h-40 bg-primary"></div>
</div>
