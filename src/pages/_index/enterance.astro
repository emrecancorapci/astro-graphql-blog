---
import StarRating from "@/components/star-rating.astro";
import Button from "@/components/ui/button.astro";
import Icon from "@/components/ui/icon.astro";
---

<div class="grid grid-cols-2">
  <div class="flex flex-col gap-5 pe-24 xl:pe-60">
    <h1 class="text-4xl font-bold text-card-foreground xl:text-6xl">
      Welcome to Astro
    </h1>
    <p class="pb-4 pe-8 text-lg leading-7 text-card-foreground">
      Astro is a new kind of static site generator that delivers lightning-fast
      performance with a modern developer experience.
    </p>
    <div class="grid gap-12">
      <div class="grid grid-cols-2 gap-4">
        <Button class="group justify-center gap-1 xl:text-lg">
          Start Exploring
          <Icon
            class="transition-all duration-300 group-hover:translate-x-2"
            icon="chevron-right"
          />
        </Button>
        <Button class="text-base xl:text-lg">Contact Sales Team</Button>
      </div>
      <div class="grid justify-center gap-1">
        <div class="flex">
          <StarRating rating={4.5} />
          <p class="font-bold">4.8</p>/ 5
        </div>
        <p>From Over <span class="font-bold">12.8k</span> Reviews</p>
      </div>
    </div>
  </div>
  <div class="bg-primary"></div>
</div>
