---
import { cn } from "@/lib/utils";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"h1">;

const { props } = Astro;
---

<h1
  class={cn("text-balance text-4xl font-bold leading-normal text-card-foreground xl:text-6xl xl:leading-tight", props.class)}
  {...props}
>
  <slot />
</h1>
